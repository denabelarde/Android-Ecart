<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pickerlinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Product name here"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/MRCHNDSR_DARKTEXT"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Price: 10000 Php"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/MRCHNDSR_DARKTEXT"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Total Price:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/MRCHNDSR_DARKTEXT"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/quantity_subtract"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/plus_button_selector"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="-"
            android:textColor="@color/RedOrange"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:editable="false"
            android:includeFontPadding="false"
            android:text="00"
            android:textColor="@color/RedOrange"
            android:textSize="70sp" >
        </TextView>

        <TextView
            android:id="@+id/quantity_add"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/plus_button_selector"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="+"
            android:textColor="@color/RedOrange"
            android:textSize="30sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/dialog_selectproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_button_selector"
        android:text="Add to cart"
        android:textColor="@color/White"
        android:textSize="18sp" />

</LinearLayout>