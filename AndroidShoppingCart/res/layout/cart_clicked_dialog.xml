<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:id="@+id/btngroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialogbtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbtn_top_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Change quantity"
            android:textColor="@color/shopperapp_blue"
            android:textSize="@dimen/dialog_text_size" />

        <TextView
            android:id="@+id/dialogbtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/roundedbtn_bottom_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Remove from cart"
            android:textColor="@color/shopperapp_blue"
            android:textSize="@dimen/dialog_text_size" />
    </LinearLayout>
    <TextView
        android:id="@+id/dialogbtn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedbtn_allsides_selector"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Cancel"
        android:textColor="@color/shopperapp_blue"
        android:textSize="@dimen/dialog_text_size" />

</LinearLayout>