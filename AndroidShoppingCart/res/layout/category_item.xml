<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/reportsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="1dp"
        android:background="@color/MRCHNDSR_SM" >

        <ImageView
            android:id="@+id/reports_item_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp" android:src="@drawable/car_icon"/>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/reports_item_imageView"
            android:padding="5dp" >

            <TextView
                android:id="@+id/reports_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="SHELF MANAGEMENT"
                android:textColor="@color/Black"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>